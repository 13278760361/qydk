<include file="Public/header" />
<!-- 包含头部模版header -->

<div class="admin">
	<form method="get">
		<div class="panel admin-panel">
			<div class="panel-head"><strong>内容列表</strong></div>
			<div style="width:100%;" class="padding border-bottom form-inline">
				<div style="float:left;" class="x16">
					<input type="button" class="button button-small checkall" name="checkall" checkfor="id" value="全选" />
					<input type="button" class="button button-small border-green" value="通知发布" onclick="System.add('通知发布','{:U('Content/add')}')">
					<input type="button" class="button button-small border-yellow" value="批量删除" onclick="getID('{:U('Content/del')}')" />
					<!--    <input type="button" class="button button-small border-blue" value="回收站" /> -->
					<div class="clear"></div>
				</div>
				<div style="float:right;" class="x16">
					<div class="form-group">
						<div class="field">
							<input type="text" class="input" id="keyword" name="keyword" size="20" placeholder="标题|内容" value="{$keyword}">
						</div>
					</div>
					<div class="form-button">
						<button class="button" type="submit" id="search">搜索</button>
					</div>
					<div class="clear"></div>
				</div>
			</div>
			<table class="table table-hover">

				<tr>
					<th width="20">选择</th>
					<th width="*">通知标题</th>
					<th width="*">通知副标题</th>
					<th width="*">通知封面</th>
					<th width="80">通知内容</th>
					<th width="*">作者</th>
					<th width="*">发布时间</th>
					<th width="*">操作</th>
				</tr>

				<volist name="lists" id="vo">
					<tr>
						<td>
							<input type="checkbox" name="id" value="{$vo.id}" />{$vo.id}
						</td>
						<td>{$vo.title}</td>
						<td>{$vo.v_title}</td>
						<td><img src="{$vo.pic}"  width="50" height="50" /></td>
						<td>{:cutStr(strip_tags(htmlspecialchars_decode($vo['content'])),10,0)}</td>
						<td>{$vo.author}</td>
						<td>{$vo.time|date="Y-m-d H:i",###}</td>
						<td><a class="button border-blue button-little" href="#" onclick="System.edit('通知编辑','{:U('Content/edit',array('id'=>$vo['id']))}')">修改</a> <a class="button border-yellow button-little" href="#" onclick="System.dell('{$vo.id}','{:U('Content/del')}')">删除</a></td>
					</tr>
				</volist>

			</table>
			<div class="panel-foot text-right" style="font-size:12px;">
				{$page}
			</div>
		</div>
	</form>
	<br />
	<include file="Public/footer" />
	<!-- 包含底部部模版footer -->
</div>
</body>

</html>